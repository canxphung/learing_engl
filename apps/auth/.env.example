# Auth Service Environment Variables

# Server
PORT=3001

# Auth Database (MariaDB)
AUTH_DB_HOST=localhost
AUTH_DB_PORT=3306
AUTH_DB_USER=root
AUTH_DB_PASS=secret
AUTH_DB_NAME=auth_service_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Redis (shared with other services)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASS=
# Or as URL: REDIS_URL=redis://:password@localhost:6379

# CORS
CORS_ORIGIN=http://localhost:3000