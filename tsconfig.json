{
  "files": [],
  "references": [
    { "path": "lib" },
    { "path": "apps/user-service" },
    { "path": "apps/auth" }
  ],
  
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["lib/*/src"],
      "@apps/*": ["apps/*/src"]
    }

  },
  "include": ["apps/**/*", "lib/**/*"]
}
